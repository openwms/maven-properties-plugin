            <post>openwms2005-public@lists.sourceforge.net</post>
        </mailingList>
        <mailingList>
            <name>OpenWMS.org Development Mailing list</name>
            <subscribe>http://lists.sourceforge.net/lists/listinfo/openwms2005-development</subscribe>
